// @link http://eslint.cn/
{
  // 当前目录为顶层目录，不允许在向外查找
  "root": true,
  // 使用他人定义的规则 airbnb
  "extends": "airbnb-base",
  "env": {
    // 允许使用 es6全局变量
    "es6": true,
    // 允许使用 node全局变量，如：require
    "node": true
  },

  // 语法解析规则
  "parserOptions": {
    // js版本问es6
    "ecmaVersion": 6,
    // 代码为js模块
    "sourceType": "module",
    // 额外的语言特性
    "ecmaFeatures": {
      "globalReturn": true,
      "impliedStrict": true
    }
  },

  // 自定义规则
  "rules": {
    "no-console": 0,
    "global-require": 0,
    "brace-style": [2, "allman", { "allowSingleLine": true }],
    "react/prefer-stateless-function": 0
  }
}
